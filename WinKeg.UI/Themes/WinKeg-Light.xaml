<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinKeg.UI">

    <!-- Metadata -->
    <x:String x:Key="Theme.Name">WinKeg-Dark</x:String>
    <x:String x:Key="Theme.Author">Nathan Ziehnert</x:String>
    <x:String x:Key="Theme.DisplayName">WinKeg (Light)</x:String>

    <!-- *** *** Colors *** *** -->
    <!-- Accent Colors -->
    <Color x:Key="WinKeg.Colors.Highlight">#FFA65D2D</Color>
    <Color x:Key="WinKeg.Colors.AccentBase">#FF754220</Color>
    <Color x:Key="WinKeg.Colors.Accent80">#CC754220</Color>
    <Color x:Key="WinKeg.Colors.Accent60">#99754220</Color>
    <Color x:Key="WinKeg.Colors.Accent40">#66754220</Color>
    <Color x:Key="WinKeg.Colors.Accent20">#33754220</Color>

    <!-- Base Colors -->
    <Color x:Key="WinKeg.Colors.ThemeForeground">#FF000000</Color>
    <Color x:Key="WinKeg.Colors.ThemeBackground">#FFD5CCC0</Color>

    <!-- Font -->
    <FontFamily x:Key="ContentControlThemeFontFamily">ms-appx:/Assets/nexa-l.ttf#Nexa</FontFamily>
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
    </Style>
</ResourceDictionary>
